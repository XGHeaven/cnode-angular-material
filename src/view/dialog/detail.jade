md-dialog(aria-label="{{label}}")
	md-toolbar
		.md-toolbar-tools
			h3 {{title}}
			span(flex)
			md-button(ng-click="gotoTopic()") Max
			md-button Reply
			md-button(ng-click="close()") Close
			
	md-dialog-content
		.md-dialog-content
			p(ng-bind-html="content")
		md-divider
		md-list
			md-subheader.md-no-sticky Replies
			md-list-item.md-3-line.md-long-text(ng-repeat="reply in replies")
				md-divider
				img.md-avatar(ng-src="{{reply.author.avatar_url}}")
				.md-list-item-text(layout="column")
					span {{reply.author.loginname}}
					span(ng-bind-html="reply.content")