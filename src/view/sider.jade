// div.sider(ng-controller="SiderController")
md-sidenav.md-sidenav-left.md-whiteframe-z3.fixed(md-component-id="sider" md-is-locked-open="$mdMedia('gt-md')" flex)
	//- md-toolbar.md-theme-indigo
		h1.md-toolbar-tools CNode.JS
	div.sider-header(flex layout="column" layout-align="space-around center")
		img.cn-avatar(src="{{CNUser.avatar_url ? CNUser.avatar_url : './image/unloginin.jpg'}}")
		span.cn-name {{CNUser.loginname ? CNUser.loginname : 'Un Login in'}}
	md-list(layout="column")
		md-subheader News
		md-list-item(ng-repeat="nav in navs")
			md-button(ui-sref="main.list.all({tab:nav.tab})" flex) {{nav.title}}
		md-subheader Others
		md-list-item
			md-button(ui-sref="main.about" flex) 关于
		md-list-item
			md-button(ui-sref="main.setting" flex) 设置
		md-list-item(ng-show="!!CNUser.loginname")
			md-button(ng-click="logout()" flex) 退出